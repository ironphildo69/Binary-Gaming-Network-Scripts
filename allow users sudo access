ark ALL = NOPASSWD: /bin/systemctl stop ark-dedicated.service
ark ALL = NOPASSWD: /bin/systemctl start ark-dedicated.service

ark ALL = NOPASSWD: /bin/systemctl stop ark-dedicated-scorched.service
ark ALL = NOPASSWD: /bin/systemctl start ark-dedicated-scorched.service

ark ALL = NOPASSWD: /bin/systemctl stop ark-dedicated-center.service
ark ALL = NOPASSWD: /bin/systemctl start ark-dedicated-center.service

ark ALL = NOPASSWD: /bin/systemctl enable ark-dedicated.timer
ark ALL = NOPASSWD: /bin/systemctl disable ark-dedicated.timer

ark ALL = NOPASSWD: /bin/systemctl enable ark-dedicated-scorched.timer
ark ALL = NOPASSWD: /bin/systemctl disable ark-dedicated-scorched.timer

ark ALL = NOPASSWD: /bin/systemctl enable ark-dedicated-center.timer
ark ALL = NOPASSWD: /bin/systemctl disable ark-dedicated-center.timer
